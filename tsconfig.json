{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "sourceMap": false,
        "skipLibCheck": false,
        "allowJs": false,
        "target": "es5",
        "lib": ["es6", "dom"],
        "typeRoots": [
            "node_modules/@types/",
            "./typings"
        ]
    },
    "exclude": [
    	"node_modules"
    ]
}